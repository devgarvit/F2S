<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:background="#eb5353"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Verify Phone number"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="Please enter the OTP sent to"
                />

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:fontFamily="sans-serif-black"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="tap to edit"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <EditText
            android:id="@+id/edit_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="65sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#eb4f4b"
            android:background="@null"
            android:maxLength="6"
            android:gravity="center_horizontal"
            android:hint="000000"
            />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_weight="0.15">


        <Button
            android:id="@+id/btn_resend_otp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/button_round_corners_red_white"
            android:textStyle="normal"
            android:textColor="#f1675d"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:text="Resend OTP"
            />

        <Button
            android:id="@+id/btn_approve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="14sp"
            android:background="@drawable/button_round_corners_red"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="Approve"/>
    </LinearLayout>

</LinearLayout>
